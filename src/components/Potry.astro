---
const { imgsrc, potry, potrytitle, Pubtime, auther } = Astro.props;
---

<div>
  <img src={imgsrc} alt={potry} />
  <h2>{potry}</h2>
  <p>
    <span class="potry title">{potrytitle}</span>  <span class="auther"
      >{auther}</span
    >
    <p class="pubtime">{Pubtime}</p>
  </p>
</div>

<style>
  div {
    border: 3px rgb(199, 199, 172) solid;
    width: 800px;
    height: 800px;
    text-align: center;
    border-radius: 2px;
    padding: 1em;
    background-color: rgb(39, 50, 59);
  }
  img {
    width: 600px;
    height: 200px;
    text-align:center;
  }

  h2 {
    font-size: 10px;
    font-family: 'Courier New', Courier, monospace;
    color: rgb(68, 100, 131);
    text-align:right;
  .Pubtime {
    font-size: 12px;
    color: rgb(176, 177, 177);
  }
  span {
    padding: 1em;
  }
</style>
